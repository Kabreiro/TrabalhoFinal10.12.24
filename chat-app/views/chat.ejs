<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bate-papo</title>
    <link rel="stylesheet" href="/styles/styles.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <header>
        <h1>Bate-papo</h1>
    </header>

    <main>
        <!-- Formulário para enviar mensagens -->
        <section id="form-section">
            <h2>Enviar Mensagem</h2>
            <form id="chat-form" action="/postarMensagem" method="POST">
                <div class="form-group">
                    <label for="usuario">Selecione um usuário:</label>
                    <select id="usuario" name="usuario" required>
                        <% usuarios.forEach(user => { %>
                            <option value="<%= user.nickname %>"><%= user.nickname %></option>
                        <% }) %>
                    </select>
                </div>

                <div class="form-group">
                    <label for="mensagem">Mensagem:</label>
                    <textarea id="mensagem" name="mensagem" placeholder="Digite sua mensagem..." required></textarea>
                </div>

                <button type="submit">Enviar Mensagem</button>
            </form>
        </section>

        <!-- Lista de mensagens -->
        <section id="messages-section">
            <h2>Mensagens:</h2>
            <ul id="messages-list">
                <% if (mensagens && mensagens.length > 0) { %>
                    <% mensagens.forEach(mensagem => { %>
                        <li class="message-item">
                            <strong><%= mensagem.usuario %>:</strong>
                            <span><%= mensagem.texto %></span> - 
                            <small><%= mensagem.timestamp %></small>
                        </li>
                    <% }) %>
                <% } else { %>
                    <li class="no-messages">Nenhuma mensagem para exibir.</li>
                <% } %>
            </ul>
        </section>
    </main>

    <footer>
        <p>&copy; 2024 Bate-papo</p>
    </footer>

    <script>
        // Envia a mensagem via AJAX
        $('#chat-form').on('submit', function(e) {
            e.preventDefault(); // Evita o envio do formulário padrão

            // Coleta os dados do formulário
            const usuario = $('#usuario').val();
            const mensagem = $('#mensagem').val();

            // Envia os dados para o servidor via AJAX
            $.ajax({
                url: '/postarMensagem',
                method: 'POST',
                data: { usuario, mensagem },
                success: function(response) {
                    // Adiciona a nova mensagem na lista
                    $('#messages-list').append(`
                        <li class="message-item">
                            <strong>${usuario}:</strong>
                            <span>${mensagem}</span> - 
                            <small>${response.timestamp}</small>
                        </li>
                    `);

                    // Limpa o campo de mensagem
                    $('#mensagem').val('');
                },
                error: function() {
                    alert('Erro ao enviar a mensagem.');
                }
            });
        });
    </script>
</body>
</html>
