<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Content-Security-Policy" content="default-src 'self'; script-src 'self' https://vercel.live;">
    <title>Bate-papo</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Bem-vindo ao Bate-papo!</h1>
    <form action="/postarMensagem" method="POST">
        <select name="usuario" required>
            <!-- Lista de usuÃ¡rios (renderizada do servidor) -->
            <% usuarios.forEach(function(usuario) { %>
                <option value="<%= usuario.nickname %>"><%= usuario.nickname %></option>
            <% }); %>
        </select>
        <textarea name="mensagem" placeholder="Digite sua mensagem..." required></textarea>
        <button type="submit">Enviar Mensagem</button>
    </form>

    <h2>Mensagens:</h2>
    <ul>
        <% mensagens.forEach(function(mensagem) { %>
            <li><strong><%= mensagem.usuario %>:</strong> <%= mensagem.texto %> - <%= mensagem.data %></li>
        <% }); %>
    </ul>
</body>
</html>
