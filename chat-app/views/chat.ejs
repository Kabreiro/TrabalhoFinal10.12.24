<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bate-papo</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Bem-vindo ao Bate-papo!</h1>
    
    <!-- Formulário para enviar mensagens -->
    <form action="/postarMensagem" method="POST">
        <label for="usuario">Selecione seu usuário:</label>
        <select name="usuario" required>
            <% usuarios.forEach(function(usuario) { %>
                <option value="<%= usuario.nickname %>"><%= usuario.nickname %></option>
            <% }); %>
        </select>
        
        <textarea name="mensagem" placeholder="Digite sua mensagem..." required></textarea>
        <button type="submit">Enviar Mensagem</button>
    </form>

    <h2>Mensagens:</h2>
    <ul>
        <% mensagens.forEach(function(mensagem) { %>
            <li><strong><%= mensagem.usuario %>:</strong> <%= mensagem.mensagem %> - <%= mensagem.timestamp %></li>
        <% }); %>
    </ul>
</body>
</html>
